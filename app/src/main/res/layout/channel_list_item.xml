<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="75.0dip"
            android:layout_marginLeft="8.0dip"
            android:background="@color/transparent_white_ten_percent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="50.0dip"
            android:paddingRight="8.0dip">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/article_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/article_title"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3.0"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="article title"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/tertiary_text" />
                </LinearLayout>

                <TextView
                    android:id="@+id/article_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/article_layout"
                    android:layout_marginTop="5.0dip"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="article title"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/mini_text" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/article_description"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13.0dip"
                        android:layout_height="10.0dip"
                        android:src="@drawable/icon_views_dark" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:text="abcd"
                        android:textColor="@color/text_gray_color"
                        android:textSize="@dimen/mini_text" />

                    <TextView
                        android:id="@+id/views_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:text="1234"
                        android:textColor="@color/tertiary_text"
                        android:textSize="@dimen/mini_text" />

                    <TextView
                        android:id="@+id/update_time_string"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:gravity="right"
                        android:text="just now"
                        android:textColor="@color/theme"
                        android:textSize="@dimen/mini_text" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="46.0dip"
            android:layout_height="42.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.0dip"
            android:background="@color/theme_light"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comments_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:text="1234"
                android:textColor="@color/white"
                android:textSize="@dimen/tertiary_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:text="@string/common_comment"
                android:textColor="@color/white"
                android:textSize="@dimen/tertiary_text" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>